@model StockControlWeb.Models.CategoriaViewModel
@{
    Layout = null;
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<div class="container" style="margin-top:3%">
    <a href="#" class="btn btn-info" onclick="AgregarCategoria(0)">Agregar Categoria </a> <br /> <br />
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="danger">
                    <th>Categoria ID</th>
                    <th>Nombre</th>                    
                    <th>Action(Edit)</th>
                    <th>Action(Delete)</th>
                </tr>
            </thead>
            <tbody id="SetCategoriaList">
                <tr id="LoadingStatus" style="color:red"></tr>
            </tbody>
        </table>
    </div>


    @*Create a PopUp modal with registration form for add or edit Categoria*@
    <div class="modal fade" id="MyModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4 id="ModalTitle"></h4>
                </div>
                <div class="modal-body">
                    <form id="form">
                        <fieldset id="SubmitForm">
                            @Html.HiddenFor(m => m.CategoriaId, new { @id = "Id" })
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Nombre, new { @id = "Nombre", @class = "form-control", @placeholder = "Nombre" })
                            </div>                                                       
                            <div class="form-group">
                                <a href="#" class="btn btn-block btn-danger" id="SaveCategoria">Guardar</a>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @*Create a PopUp Modal for DeleteConfirmation*@

    <div class="modal fade" id="DeleteConfirmation">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4>Eliminar Categoria</h4>
                </div>
                <div class="modal-body">
                    <h4>Esta seguro que desea eliminar la Categoria?.</h4>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-primary" data-dismiss="modal">Cancelar</a>
                    <a href="#" class="btn btn-primary" onclick="ConfirmarDelete()">Aceptar</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $("#LoadingStatus").html("Loading...")
    $.get("/Categoria/GetCategoriaList", null, DataBind);
    function DataBind(CategoriaList) {
        var setData = $("#SetCategoriaList");
        for (var i = 0; i < CategoriaList.length; i++) {
            var Data = "<tr class='row_" + CategoriaList[i].CategoriaId + "'>" +
                "<td>" + CategoriaList[i].CategoriaId + "</td>" +
                "<td>" + CategoriaList[i].Nombre + "</td>" +                                
                "<td>" + "<a href='#' class='btn btn-warning' onclick='Edit(" + CategoriaList[i].CategoriaId + ")'><span class='glyphicon glyphicon-edit'></span></a>" + "</td>" +
                "<td>" + "<a href='#' class='btn btn-danger' onclick='Delete(" + CategoriaList[i].CategoriaId + ")'><span class='glyphicon glyphicon-trash'></span></a>" + "</td>" +
                "/tr>";

            setData.append(Data);
            $("#LoadingStatus").html(" ")
        }
    }

    //Show the PopUp Modal for add new Categoria
    function AgregarCategoria(CategoriaId) {
        $("#form")[0].reset();
        $("#ModalTitle").html("Agregar Categoria");
        $("#MyModal").modal();
    }

    //Show the PopUp Modal for edir Categoria Record
    function Edit(CategoriaId) {
        var url = "/Categoria/GetCategoriaById?CategoriaId=" + CategoriaId;
        $("#ModalTitle").html("Actualizar Categoria");
        $("#MyModal").modal();
        $.ajax({
            type: "GET",
            url: url,
            success: function (data) {
                var obj = JSON.parse(data);
                $("#Id").val(obj.CategoriaId);
                $("#Nombre").val(obj.Nombre);                
            }
        })
    }

    $("#SaveCategoria").click(function () {
        var data = $("#SubmitForm").serialize();
        $.ajax({
            type: "Post",
            url: "/Categoria/SaveDataInDatabase",
            data: data,
            success: function (result) {
                alert("Success!...");
                window.location.href = "/Categoria/index";
                $("#MyModal").modal("hide");
            }
        })
    })

    //Show de PopUp Modal for DeleteConfermation
    function Delete(CategoriaId) {
        $("#Id").val(CategoriaId);
        $("#DeleteConfirmation").modal("show");
    }

    function ConfirmarDelete() {
        var CategoriaId = $("#Id").val();
        $.ajax({
            type: "POST",
            url: "/Categoria/DeleteCategoria?CategoriaId=" + CategoriaId,
            success: function (result) {
                $("#DeleteConfirmation").modal("hide");
                $(".row_" + CategoriaId).remove();
            }
        })
    }
</script>